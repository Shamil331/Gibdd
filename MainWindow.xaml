<Window x:Class="Gibdd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gibdd"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Главная страница" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Водительские удостоверения" x:Name="LicensesBtn" Click="LicensesBtn_Click"/>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Center">
                <Button Content="Водители" x:Name="DriversBtn" Click="DriversBtn_Click"/>
                <Button Content="Штрафы" Margin="10 0 0 0" x:Name="PenaltiesBtn" Click="PenaltiesBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
